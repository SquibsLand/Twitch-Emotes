{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vite Dev Server",
            "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--mode",
                "development"
            ],
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--inspect"
            ]
        }
    ]
}